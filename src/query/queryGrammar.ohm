Query {
  Main = (Expression | MatchExpression) end
  Expression = From Select
  MatchExpression = From Match

  From = fromLiteral ident
  Select = selectLiteral Step+
  Step = path Condition?
  Condition = "[" Value comparison Value "]"
  Match = matchLiteral Node (Relationship Node)*
  Node = "(" Step+ ")"
  Relationship = "-[" ident "]->"

  Value = literal | path | ident

  fromLiteral = "FROM"
  matchLiteral = "MATCH"
  selectLiteral = "SELECT"

  comparison = ("=" | "!=" | ">=" | "<=" | ">" | "<")
  path = ident ("." ident)*
  ident = letter (alnum | "_" | "-")*
  literal = string | float | digit | bool
  bool = "true" | "false" | "TRUE" | "FALSE"
  string
    = "'" (~"'" any)* "'"
    | "\"" (~"\"" any)* "\""
  float   = digit? "." digit+
}
